<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".Controller.Fragment.ShowDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit_dialog_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/box_empty_icon"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mrg_5"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
            android:id="@+id/edit_dialog_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_camera"
            android:textAlignment="center"
            android:layout_margin="@dimen/mrg_5"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:text="Task Title :"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/task_title_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Maktab Sharif" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/content_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:text="Task Content :"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/task_content_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Task Manager Program" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/state_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:text="Task State :"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/task_state_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="TODO" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:text="Task Time :"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/task_time_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="23:12:30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:text="Task Date :"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/task_date_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mrg_5"
            android:padding="@dimen/pad_5"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="9/13/2020" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <com.google.android.material.button.MaterialButton
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked"
                android:id="@+id/dialog_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mrg_5"
                android:padding="@dimen/pad_5"
                android:text="Delete"
                app:icon="@drawable/ic_trashcan_admin"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked"
                android:id="@+id/dialog_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mrg_5"
                android:padding="@dimen/pad_5"
                android:text="Edit"
                app:icon="@drawable/ic_edit"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked"
                android:id="@+id/dialog_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mrg_5"
                android:padding="@dimen/pad_5"
                android:text="Close"
                app:icon="@drawable/ic_close"
                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>